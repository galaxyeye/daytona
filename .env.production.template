# Daytona Production Environment Configuration Template
# 复制此文件为 .env.production 并修改相应配置

# =============================================================================
# 基础配置
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# 服务域名配置
# =============================================================================
# 主域名 (不包含协议)
DOMAIN=localhost
# 完整的前端URL
FRONTEND_URL=http://localhost
# API基础URL
API_URL=http://localhost/api
# 文档URL
DOCS_URL=http://localhost/docs

# =============================================================================
# 数据库配置
# =============================================================================
# PostgreSQL 配置
DB_HOST=postgres
DB_PORT=5432
DB_NAME=daytona
DB_USER=daytona
DB_PASSWORD=CHANGE_ME_DB_PASSWORD

# 数据库连接池配置
DB_POOL_MIN=5
DB_POOL_MAX=20

# =============================================================================
# Redis 配置
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_DB=0

# =============================================================================
# 对象存储配置 (MinIO)
# =============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET
MINIO_BUCKET=daytona
MINIO_REGION=us-east-1
MINIO_USE_SSL=false

# 外部访问MinIO
MINIO_EXTERNAL_ENDPOINT=http://localhost:9000

# =============================================================================
# JWT 和安全配置
# =============================================================================
JWT_SECRET=CHANGE_ME_JWT_SECRET_AT_LEAST_32_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session 密钥
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_AT_LEAST_32_CHARS

# 加密密钥 (用于敏感数据加密)
ENCRYPTION_KEY=CHANGE_ME_ENCRYPTION_KEY_32_CHARS

# =============================================================================
# OAuth/SSO 配置 (Dex)
# =============================================================================
DEX_URL=http://dex:5556
DEX_CLIENT_ID=daytona
DEX_CLIENT_SECRET=CHANGE_ME_DEX_CLIENT_SECRET
DEX_REDIRECT_URI=http://localhost/auth/callback

# OIDC 配置
OIDC_ISSUER=http://dex:5556
OIDC_CLIENT_ID=daytona
OIDC_CLIENT_SECRET=CHANGE_ME_DEX_CLIENT_SECRET

# =============================================================================
# 邮件服务配置
# =============================================================================
# SMTP 配置 (生产环境请配置真实SMTP)
SMTP_HOST=maildev
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@localhost
SMTP_SECURE=false

# =============================================================================
# 监控和追踪配置
# =============================================================================
# Jaeger 配置
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6832

# Grafana 配置
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# =============================================================================
# Docker Registry 配置
# =============================================================================
REGISTRY_URL=registry:5000
REGISTRY_USERNAME=
REGISTRY_PASSWORD=

# =============================================================================
# 应用特定配置
# =============================================================================
# 工作空间配置
WORKSPACE_DIR=/workspaces
DEFAULT_WORKSPACE_IMAGE=ubuntu:22.04

# 代理配置
PROXY_PORT=80
PROXY_HTTPS_PORT=443

# Runner 配置
RUNNER_IMAGE=daytona-runner:latest
RUNNER_NETWORK=daytona-network

# =============================================================================
# 性能和限制配置
# =============================================================================
# API 速率限制
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# 文件上传限制 (MB)
MAX_FILE_SIZE=100

# 并发限制
MAX_CONCURRENT_WORKSPACES=10

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# 开发和调试配置
# =============================================================================
# 调试模式 (生产环境设为false)
DEBUG=false
DEBUG_CORS=false

# 开发工具
ENABLE_DEV_TOOLS=false

# =============================================================================
# SSL/TLS 配置 (如果启用HTTPS)
# =============================================================================
# SSL_CERT_PATH=/ssl/cert.pem
# SSL_KEY_PATH=/ssl/key.pem
# SSL_CA_PATH=/ssl/ca.pem

# =============================================================================
# 备份配置
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # 每天凌晨2点
BACKUP_RETENTION_DAYS=7

# =============================================================================
# 通知配置
# =============================================================================
# Webhook 通知
WEBHOOK_URL=
WEBHOOK_SECRET=

# Slack 通知
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#daytona

# =============================================================================
# 安全配置
# =============================================================================
# CORS 配置
CORS_ORIGIN=http://localhost
CORS_CREDENTIALS=true

# CSP 配置
CSP_ENABLED=true

# 安全头配置
SECURITY_HEADERS_ENABLED=true
