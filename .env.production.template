# Daytona 生产环境配置文件
# 复制此文件为 .env.production 并填写实际值

# =============================================================================
# 版本配置
# =============================================================================
API_VERSION=latest
DASHBOARD_VERSION=latest
DOCS_VERSION=latest

# =============================================================================
# 数据库配置
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=daytona
DB_USER=daytona
# 请设置一个强密码
DB_PASSWORD=your_secure_database_password

# =============================================================================
# Redis 配置
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# MinIO 对象存储配置
# =============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
# 请设置一个强密码
MINIO_SECRET_KEY=your_secure_minio_password
MINIO_BUCKET=daytona-storage

# =============================================================================
# 应用配置
# =============================================================================
# JWT 密钥 - 请使用随机生成的强密钥
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=7d

# API 基础 URL
API_BASE_URL=http://localhost/api
FRONTEND_URL=http://localhost

# 文档站点 URL
DOCS_URL=http://localhost/docs

# =============================================================================
# OAuth 认证配置 (Dex)
# =============================================================================
DEX_ISSUER_URL=http://dex:5556/dex
DEX_CLIENT_ID=daytona
DEX_CLIENT_SECRET=your_dex_client_secret
DEX_REDIRECT_URI=http://localhost/auth/callback

# =============================================================================
# 监控配置
# =============================================================================
# Grafana 管理员账户
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# Jaeger 配置
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# =============================================================================
# 安全配置
# =============================================================================
# 启用 HTTPS (生产环境建议启用)
ENABLE_HTTPS=false

# CORS 允许的域名
CORS_ORIGINS=http://localhost,https://your-domain.com

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# 性能配置
# =============================================================================
# 最大并发连接数
MAX_CONNECTIONS=100

# 请求超时时间 (秒)
REQUEST_TIMEOUT=30

# 文件上传大小限制 (MB)
MAX_FILE_SIZE=100

# =============================================================================
# 邮件配置 (可选)
# =============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@your-domain.com

# =============================================================================
# 存储配置
# =============================================================================
# 数据持久化路径
DATA_PATH=./data

# 备份路径
BACKUP_PATH=./backups

# =============================================================================
# 开发/调试配置
# =============================================================================
# 启用调试模式 (生产环境应设为 false)
DEBUG=false

# 启用 API 文档 (生产环境建议禁用)
ENABLE_API_DOCS=false

# =============================================================================
# 扩展配置
# =============================================================================
# 集群模式
CLUSTER_MODE=false

# 负载均衡器配置
LB_ALGORITHM=round_robin

# 健康检查间隔 (秒)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# 第三方服务配置
# =============================================================================
# 云服务提供商 (aws/gcp/azure/local)
CLOUD_PROVIDER=local

# AWS 配置 (如果使用 AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# 特性开关
# =============================================================================
# 启用实验性功能
ENABLE_EXPERIMENTAL_FEATURES=false

# 启用分析和遥测
ENABLE_ANALYTICS=false

# 启用自动备份
ENABLE_AUTO_BACKUP=true

# 自动备份间隔 (小时)
BACKUP_INTERVAL=24
