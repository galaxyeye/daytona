# Spacedock Docker 镜像构建配置文件
# 您可以复制此文件为 .env 文件并修改配置

# 镜像仓库配置
REGISTRY=docker.io
NAMESPACE=galaxyeye88

# 镜像版本
VERSION=latest

# 构建平台（多平台用逗号分隔）
PLATFORM=linux/amd64,linux/arm64

# 要构建的服务（用逗号分隔）
# 可选值: api, proxy, runner, docs
SERVICES=api,proxy,runner,docs

# 是否推送到仓库（true/false）
PUSH=false

# 是否禁用构建缓存（true/false）
NO_BUILD_CACHE=false

# 是否显示详细日志（true/false）
VERBOSE=false

# 构建参数（可选）
# 示例构建参数：
# PUBLIC_WEB_URL=https://spacedock.io
# PUBLIC_ALGOLIA_APP_ID=your_app_id
# PUBLIC_ALGOLIA_API_KEY=your_api_key

# 预设配置示例：

# 开发环境
# VERSION=dev
# PLATFORM=linux/amd64
# SERVICES=api,proxy,runner
# PUSH=false

# 生产环境
# VERSION=v1.0.0
# PLATFORM=linux/amd64,linux/arm64
# SERVICES=api,proxy,runner,docs
# PUSH=true

# GitHub Container Registry
# REGISTRY=ghcr.io
# NAMESPACE=your-org
# PUSH=true
